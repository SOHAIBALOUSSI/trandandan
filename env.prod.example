# Production Environment Configuration
# Copy this file to .env.prod and fill in your actual values

# Application Configuration
NODE_ENV=production
APP_NAME=Transcendence
APP_VERSION=1.0.0
APP_URL=https://your-domain.com

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# Database Configuration
DATABASE_URL=your_database_connection_string
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=transcendence_prod
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_db_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_strong_redis_password
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASSWORD=your_strong_rabbitmq_password
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (for notifications and 2FA)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
SMTP_FROM=noreply@your-domain.com

# 2FA Configuration
TOTP_ISSUER=Transcendence
TOTP_ALGORITHM=SHA1
TOTP_DIGITS=6
TOTP_PERIOD=30

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://your-domain.com
SESSION_SECRET=your_session_secret_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups

# Performance Configuration
MAX_CONNECTIONS=1000
WORKER_PROCESSES=4
CLUSTER_MODE=true
